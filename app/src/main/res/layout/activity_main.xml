<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="@drawable/fadli"
              android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="PENDIDIKAN FPR"
            android:textStyle="bold"
            android:textColor="@color/colorred"

            android:gravity="center"
            android:textSize="40dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="(Front Perjuangan Rakyat)"
            android:textColor="@color/colorred"
            android:textStyle="italic"
            android:textSize="30dp"
            android:gravity="center"/>


    <Button
            android:id="@+id/button"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:text="Tentang fpr"
            android:onClick="Pindah"/>
    <Button
            android:id="@+id/button1"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FMN"
            android:onClick="Pindah"
    />

    <Button
            android:id="@+id/button2"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PUSKEBA"
            android:onClick="Pindah"/>


    <Button
            android:id="@+id/button3"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="AGRARIA"
            android:onClick="Pindah"/>


    <Button
            android:id="@+id/button4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SERUNI"
            android:onClick="Pindah"/>
    <Button
            android:id="@+id/button5"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PEMBARU"
            android:onClick="Pindah"/>

</LinearLayout>
